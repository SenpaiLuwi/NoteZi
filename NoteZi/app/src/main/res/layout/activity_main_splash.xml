<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreen"
    tools:context=".MainSplashActivity">

    <ProgressBar
        android:id="@+id/progBar_id"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress"/>

    <TextView
        android:id="@+id/splashText_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/altonebold"
        android:text="@string/splashtext"
        android:textColor="@color/TealColorBUTTONS"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <ImageView
        android:id="@+id/imageViewOne"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:rotation="10"
        android:scaleType="fitXY"
        android:src="@drawable/splashdetails"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageViewTwo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:rotation="-10"
        android:scaleType="fitXY"
        android:src="@drawable/splashdetails"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageViewThree"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:rotation="30"
        android:scaleType="fitXY"
        android:src="@drawable/splashdetails"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageViewFour"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:rotation="-50"
        android:scaleType="fitXY"
        android:src="@drawable/splashdetails"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>