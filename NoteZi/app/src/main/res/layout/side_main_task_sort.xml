<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColorTEXT"
    android:orientation="vertical">


    <TextView
        android:id="@+id/AddSceduleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackColorBG"
        android:fontFamily="@font/blackersansbold"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/Sort"
        android:textColor="#EEF5FF"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/task_name_sort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_weight="1"
            android:buttonTint="@color/redColorBUTTONS"
            android:fontFamily="@font/altonebold"
            android:minHeight="48dp"
            android:text="@string/TaskSortName"
            android:textColor="@color/redColorBUTTONS"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/task_deadline_sort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_weight="1"
            android:buttonTint="@color/redColorBUTTONS"
            android:fontFamily="@font/altonebold"
            android:minHeight="48dp"
            android:text="@string/TaskSortDeadline"
            android:textColor="@color/redColorBUTTONS"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

</LinearLayout>